<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/selector_list_item_click"
    android:gravity="center_vertical"

    android:orientation="horizontal">

    <RadioButton

        android:id="@+id/item_dish_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete" />


    <com.mobileinternet.waimai.businessedition.view.smartiv.SmartImageView
        android:id="@+id/item_dish_iv_image"
        android:layout_width="86dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_food_info_default_big" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/item_dish_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="start|center_vertical"
            android:text="醋溜土豆丝"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_dish_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="￥ 3"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp" />

    </LinearLayout>

   <TextView
       android:id="@+id/item_dish_tv_guige"
       android:layout_width="wrap_content"
       android:gravity="right|center_vertical"
       android:layout_marginRight="16dp"
       android:layout_height="wrap_content"
       android:textColor="@android:color/holo_red_dark"
       android:text="多规格"
       />

    <ImageView
        android:id="@+id/item_dish_iv_move"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_foodtag_sort" />

</LinearLayout>
