<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.mobileinternet.waimai.businessedition.activity.Dining.PayForOotActivity">

    <TextView

        android:textSize="22sp"
        android:textStyle="bold"
        android:text="参加超时赔付活动后，可以"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/shape_black_oval"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:text="提升餐厅排名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/shape_black_oval"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:text="提升用户满意度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/shape_black_oval"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:text="带来更多的客户选择"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:onClick="connectManager"
        android:clickable="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="联系业务经理"
        android:background="@drawable/shape_frame_orange"

        />


</LinearLayout>
