<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobileinternet.waimai.businessedition.activity.Acount.AcountActivity">

    <LinearLayout
        android:id="@+id/we_connect"
        style="@style/shop_ll"
        android:clickable="true"
        android:padding="0dp">

        <TextView
            style="@style/we_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:text="帐户名" />

        <TextView
            android:id="@+id/my_acount_tv_acount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
             />


    </LinearLayout>


    <LinearLayout
        style="@style/shop_ll"
        android:clickable="true"
        android:onClick="modifyPwd"
        android:padding="0dp">

        <TextView
            style="@style/we_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="false"
            android:text="密码" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_foodtag_arrow"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="修改" />

    </LinearLayout>


    <TextView
        android:onClick="bindPhone"
        style="@style/we_tv"
        android:layout_width="match_parent"
        android:background="@drawable/selector_list_item_click"
        android:clickable="true"
        android:drawableRight="@drawable/ic_foodtag_arrow"
        android:paddingRight="10dp"
        android:text="绑定手机号" />


</LinearLayout>
