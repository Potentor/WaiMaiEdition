<resources>

   <style name="activity_switch_animation" >
       <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_right</item>
       <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_left</item>
       <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_left</item>
       <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_right</item>
   </style>

    <style name="activity_switch" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/activity_switch_animation</item>
    </style>

    <style name="edit_dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:layout_width">200dp</item>
    </style>

</resources>
