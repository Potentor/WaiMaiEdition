<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selector_list_item_click">

    <TextView
        android:id="@+id/day_order_list_item_tv_serial"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/day_order_list_item_tv_order_number"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/day_order_list_item_tv_money"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingRight="16dp"
        android:drawableRight="@drawable/ic_foodtag_arrow"
        />

</LinearLayout>
