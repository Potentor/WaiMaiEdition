<com.mobileinternet.waimai.businessedition.view.MLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.mobileinternet.waimai.businessedition.view.PagerSlidingTabStrip
        android:id="@+id/today_psts"
        app:pstsIndicatorColor="@android:color/holo_red_dark"
        app:pstsShouldExpand="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/abc_ab_bottom_solid_dark_holo" />

    <android.support.v4.view.ViewPager
        android:id="@+id/today_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</com.mobileinternet.waimai.businessedition.view.MLinearLayout>

