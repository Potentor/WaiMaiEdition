<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mobileinternet.waimai.businessedition.activity.Acount.PwdActivity">

    <TextView
        android:layout_marginLeft="0dp"
        android:textSize="16sp"
        style="@style/finance_tv_title"
        android:text="原来密码" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/pwd_et_original"
        android:hint="输入您的原来密码"
        style="@style/pwd_et"  />


    <TextView
        android:layout_marginLeft="0dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        style="@style/finance_tv_title"
        android:text="新密码" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/pwd_et_new"
        android:hint="输入您的新密码"
        style="@style/pwd_et"  />


    <EditText
        android:inputType="textPassword"
        android:id="@+id/pwd_et_confirm"
        android:layout_marginTop="20dp"
        android:hint="确认密码"
        style="@style/pwd_et" />

    <TextView
        android:onClick="applyModification"
        android:clickable="true"
        android:textColor="@android:color/holo_red_light"
        android:background="@drawable/shape_add_business_time_tv"
        android:gravity="center"
        android:text="提交修改"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


</LinearLayout>
