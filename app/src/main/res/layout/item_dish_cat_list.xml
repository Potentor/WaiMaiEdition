<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/selector_list_item_click"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <ImageView
        android:id="@+id/item_dish_iv_delete"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:src="@drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:paddingLeft="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/item_dish_tv_name"
            android:layout_marginTop="20dp"
            android:gravity="start|center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_dish_tv_num"
            android:text="菜品数："
            android:gravity="start|center_vertical"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <ImageView
        android:id="@+id/item_dish_iv_edit"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/item_dish_iv_move"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_foodtag_sort"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
